{
    "name": "alexskrypnyk/drupal_extension_scaffold",
    "description": "Drupal extension scaffold.",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://alexskrypnyk.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/AlexSkrypnyk/drupal_extension_scaffold",
    "support": {
        "issues": "https://github.com/AlexSkrypnyk/drupal_extension_scaffold/issues",
        "source": "https://github.com/AlexSkrypnyk/drupal_extension_scaffold"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "alexskrypnyk/customizer": "^0.3",
        "alexskrypnyk/str2name": "^1.1",
        "composer/composer": "^2.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.42",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "rector/rector": "^1.0",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/process": "^6.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\Customizer\\Tests\\": "vendor/alexskrypnyk/customizer/tests/phpunit",
            "AlexSkrypnyk\\drupal_extension_scaffold\\Scaffold\\Tests\\": ".scaffold/tests/phpunit"
        }
    },
    "config": {
        "allow-plugins": {
            "alexskrypnyk/customizer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "lint": [
            "phpcs .scaffold/phpcs.xml",
            "phpmd --exclude vendor customize.php text phpmd.xml",
            "phpstan --configuration=.scaffold/phpstan.neon",
            "rector process --clear-cache --dry-run -c .scaffold/rector.php"
        ],
        "lint-fix": [
            "rector process --clear-cache -c .scaffold/rector.php",
            "phpcbf --standard=Drupal customize.php .scaffold/tests/phpunit/Functional"
        ],
        "test": "phpunit -c .scaffold/phpunit.xml --no-coverage",
        "test-coverage": "phpunit -c .scaffold/phpunit.xml"
    }
}
